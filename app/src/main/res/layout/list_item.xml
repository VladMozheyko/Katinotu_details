<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#005143"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Одноконтурные"
        android:textSize="25dp"
        android:textColor="#005143"
        android:textStyle="bold"
        android:id="@+id/txt_category"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(c закрытой камерой)"
            android:layout_below="@id/txt_category"
            android:layout_alignLeft="@id/txt_category"
            android:textColor="#005143"
            android:textSize="18dp"
            android:id="@+id/txt_explanation"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="без трехходового клапана"
            android:layout_below="@id/txt_category"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_explanation"
            android:textColor="#005143"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/txt_bold_explanation"/>

</RelativeLayout>


<View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#005143"/>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/inner_list"/>

</ScrollView>



</LinearLayout>